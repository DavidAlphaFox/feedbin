<%=
demo = Class.new(Phlex::HTML) do
  include PhlexHelper
  def template(&)
    div class: "flex gap-4" do
      render Views::Components::Form::SelectInput.new do |input|
        input.input do
          select_tag(:sort,
            helpers.options_for_select([["Option 1", "1"], ["Option 2", "2"]], "1"),
            class: "peer"
          )
        end
      end

      render Views::Components::Form::SelectInput.new do |input|
        input.input do
          select_tag(:sort,
            helpers.options_for_select([["Option 1", "1"], ["Option 2", "2"]], "1"),
            class: "peer",
            data: {focused: true}
          )
        end
      end

      render Views::Components::Form::SelectInput.new do |input|
        input.input do
          select_tag(:sort,
            helpers.options_for_select([["Option 1", "1"], ["Option 2", "2"]], "1"),
            class: "peer",
            disabled: true
          )
        end
      end
    end
  end
end
render demo.new
%>
