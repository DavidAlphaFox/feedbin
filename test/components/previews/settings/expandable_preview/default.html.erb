<%=
demo = Class.new(Phlex::HTML) do
  def template(&)
    render Views::Components::Settings::Expandable.new(class: "mb-14") do |expandable|
      expandable.header do
        "Header"
      end
      expandable.description do
        render Views::Components::Settings::ControlRow.new do |row|
          row.title { "Title" }
          row.description { "Description" }
          row.control do
            button(data: {action: "expandable#toggle", toggle_text: "Hide"}) do
              "Show"
            end
          end

        end
      end
      expandable.item do
        div class: "py-2" do
          "Content"
        end
      end
    end
  end
end
render demo.new
%>


